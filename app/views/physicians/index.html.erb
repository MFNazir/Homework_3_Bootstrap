<p id="notice"><%= notice %></p>

<h1>Physicians</h1>

<div class="media">
<div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Specialty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @physicians.each do |physician| %>
      <tr>
        <td><%= physician.name %></td>
        <td><%= physician.specialty %></td>
        <td><%= link_to 'Show', physician, class: 'btn btn-mini btn-primary' %></td>
        <td><%= link_to 'Edit', edit_physician_path(physician), class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', physician, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

<%= link_to 'New Physician', new_physician_path %>
